@startuml Functional Modules
!theme plain
skinparam backgroundColor #FFFFFF
skinparam packageStyle rectangle

title Zen Campus - Functional Modules

package "Auth and RBAC" {
  [Login/Register]
  [JWT Auth]
  [Role Permission]
}

package "Classroom Reservation" {
  [Resource List]
  [Create Reservation]
  [Approval Workflow]
  [Timeline]
}

package "Lecture" {
  [Publish Lecture]
  [Signup]
  [Waitlist]
  [Check-in]
}

package "Equipment Borrow" {
  [Equipment Catalog]
  [Borrow Request]
  [Approve/Reject]
  [Return]
}

package "Campus Bus" {
  [Route Management]
  [Trip Management]
  [Booking]
  [Waitlist Promotion]
}

package "Study Room" {
  [Room and Seat List]
  [Seat Reservation]
  [Pending Seat TTL]
  [Realtime Seat Status]
}

package "Messaging and Ops" {
  [Message Templates]
  [Inbox]
  [Broadcast]
  [Rule Config]
  [Dashboard and Reports]
}

@enduml
