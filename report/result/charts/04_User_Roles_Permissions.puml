        usecase "浏览教室" as UC1
        usecase "预约教室" as UC2
        usecase "申请设备" as UC3
        usecase "报名讲座" as UC4
        usecase "预约校车" as UC5
        usecase "预约座位" as UC6
        usecase "查看消息" as UC7
    }

