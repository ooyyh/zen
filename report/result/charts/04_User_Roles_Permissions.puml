        usecase "审批预约" as UC8
        usecase "管理讲座" as UC9
        usecase "审批设备" as UC10
        usecase "管理座位" as UC11
        usecase "发送通知" as UC12
    }

    rectangle "管理员权限" {
        usecase "用户管理" as UC13
        usecase "系统配置" as UC14
        usecase "查看报表" as UC15
        usecase "消息模板" as UC16
    }

    Student --> UC1
    Student --> UC2
    Student --> UC3
    Student --> UC4
    Student --> UC5
    Student --> UC6
    Student --> UC7

    Teacher --> UC1
