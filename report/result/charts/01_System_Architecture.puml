@startuml System Architecture
!theme plain
skinparam backgroundColor #FFFFFF
skinparam componentStyle rectangle

title Zen Campus - System Architecture

package "Client Layer" {
  [Web Browser] as Browser
  [Mobile Browser] as Mobile
}

package "Frontend Layer" {
  [Vue 3 App] as VueApp
  [Vue Router] as Router
  [ECharts Dashboard] as Echarts
  [STOMP Client] as Stomp
  [API Service] as Api
}

package "Backend Layer" {
  [Spring Boot] as Boot
  [Auth Interceptor] as Auth
  [Global Exception Handler] as Ex
  [WebSocket Config] as WsCfg
}

package "Service Layer" {
  [ReservationService] as S1
  [LectureService] as S2
  [EquipmentBorrowService] as S3
  [BusBookingService] as S4
  [SeatReservationService] as S5
  [MessageService] as S6
  [ReportService] as S7
}

package "Data and Infra" {
  [MyBatis Mapper] as Mapper
  database "MySQL" as MySQL
  [Redis + Redisson] as Redis
  [STOMP Broker /topic] as Broker
}

Browser --> VueApp
Mobile --> VueApp
VueApp --> Router
VueApp --> Echarts
VueApp --> Stomp
VueApp --> Api
Api --> Boot
Stomp --> WsCfg
Boot --> Auth
Boot --> Ex
Boot --> S1
Boot --> S2
Boot --> S3
Boot --> S4
Boot --> S5
Boot --> S6
Boot --> S7
S1 --> Mapper
S2 --> Mapper
S3 --> Mapper
S4 --> Mapper
S5 --> Mapper
S6 --> Mapper
S7 --> Mapper
Mapper --> MySQL
S1 --> Redis
S2 --> Redis
S3 --> Redis
S4 --> Redis
S5 --> Redis
S5 --> Broker

@enduml
