@startuml Deployment Architecture
!theme plain
skinparam backgroundColor #FFFFFF

title Zen Campus - Deployment Architecture

cloud "Clients" {
  [PC Browser]
  [Mobile Browser]
}

node "Access Layer" {
  [Nginx Reverse Proxy]
}

node "Frontend" {
  [Vue Dist Static Assets]
}

node "Application" {
  [Spring Boot Instance A]
  [Spring Boot Instance B]
}

node "Data" {
  database "MySQL (zen)"
  [Redis]
}

node "Realtime" {
  [WebSocket STOMP Broker]
}

@enduml
