@startuml Technical Layers
!theme plain
skinparam backgroundColor #FFFFFF

title Zen Campus - Technical Architecture Layers

package "Presentation" {
  [Vue 3 + Vite]
  [Router + AppShell]
  [ECharts]
  [STOMP Client]
}

package "Controller" {
  [AuthController]
  [ReservationController]
  [LectureController]
  [EquipmentController]
  [BusController]
  [StudyRoomController]
  [Admin Controllers]
}

package "Service" {
  [UserService]
  [ReservationService]
  [LectureService]
  [EquipmentBorrowService]
  [BusBookingService]
  [SeatReservationService]
  [MessageService]
  [ReportService]
}

package "Data Access" {
  [MyBatis Mapper]
  [Mapper XML]
}

package "Infrastructure" {
  [MySQL]
  [Redis + Redisson]
  [WebSocket Broker]
  [JWT + Interceptor]
}

@enduml
