@startuml API Design
!theme plain
skinparam backgroundColor #FFFFFF

title Zen Campus - API Interface Design

package "Auth" {
  [POST /api/auth/login]
  [POST /api/auth/register]
  [POST /api/auth/me]
}

package "Classroom and Reservation" {
  [GET /api/classrooms]
  [POST /api/reservations]
  [GET /api/reservations/my]
  [GET /api/reservations/{id}/timeline]
  [POST /api/admin/approvals/{id}/approve]
  [POST /api/admin/approvals/{id}/reject]
}

package "Lecture" {
  [GET /api/lectures]
  [POST /api/lectures/{id}/signup]
  [POST /api/lectures/{id}/cancel]
  [POST /api/lectures/{id}/checkin]
  [GET /api/admin/lectures]
}

package "Equipment" {
  [GET /api/equipments]
  [POST /api/equipments/{id}/borrow]
  [POST /api/equipments/borrows/{id}/return]
  [GET /api/admin/equipments]
}

package "Bus" {
  [GET /api/bus/trips]
  [POST /api/bus/trips/{id}/book]
  [POST /api/bus/bookings/{id}/cancel]
  [GET /api/admin/bus/routes]
  [POST /api/admin/bus/trips]
}

package "Study Room" {
  [GET /api/study-rooms]
  [GET /api/study-rooms/{id}/seats]
  [POST /api/study-rooms/seats/{id}/reserve]
  [POST /api/seat-status/pending/{seatId}]
  [POST /api/seat-status/release/{seatId}]
}

package "Messaging and Ops" {
  [GET /api/messages]
  [POST /api/messages/{id}/read]
  [POST /api/admin/messages/broadcast]
  [GET /api/admin/reports/overview]
  [GET /api/dashboard/summary]
  [GET /api/admin/config/reservation-rules]
  [PUT /api/admin/config/reservation-rules]
}

@enduml
