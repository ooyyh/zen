@startuml API_Interface_Design
!theme plain
skinparam backgroundColor #FEFEFE
skinparam classBackgroundColor #F0F0F0

package "REST API 接口设计" {
    rectangle "认证接口" {
        usecase "POST /api/auth/login" as API1
        usecase "POST /api/auth/register" as API2
        usecase "GET /api/auth/current" as API3
    }

    rectangle "教室预约接口" {
        usecase "GET /api/classroom" as API4
        usecase "POST /api/reservation" as API5
        usecase "GET /api/reservation/my" as API6
        usecase "DELETE /api/reservation/{id}" as API7
    }

    rectangle "设备借用接口" {
        usecase "GET /api/equipment" as API8
        usecase "POST /api/equipment/borrow" as API9
        usecase "GET /api/equipment/borrow/my" as API10
        usecase "PUT /api/equipment/borrow/{id}/return" as API11
    }

    rectangle "座位预约接口" {
        usecase "GET /api/study-room" as API12
        usecase "GET /api/seat/layout/{roomId}" as API13
        usecase "POST /api/seat/reserve" as API14
        usecase "DELETE /api/seat/reservation/{id}" as API15
        usecase "GET /api/seat/reservation/my" as API16
    }

    rectangle "讲座接口" {
        usecase "GET /api/lecture" as API17
        usecase "POST /api/lecture/signup" as API18
        usecase "GET /api/lecture/signup/my" as API19
    }

    rectangle "WebSocket接口" {
        usecase "WS /ws" as API20
        usecase "SUBSCRIBE /topic/seat/{roomId}" as API21
        usecase "SEND /app/seat-reserve" as API22
    }
}

@enduml
