@startuml Frontend_Page_Structure
!theme plain
skinparam backgroundColor #FEFEFE
skinparam classBackgroundColor #F0F0F0

package "前端页面结构" {
    component [App.vue] as App

    package "公共页面" {
        component [LoginView] as Login
        component [RegisterView] as Register
        component [HomeView] as Home
    }

    package "学生功能页面" {
        component [DashboardView] as Dashboard
        component [ClassroomListView] as ClassList
        component [ReservationListView] as ResList
        component [EquipmentListView] as EquipList
        component [LectureListView] as LectureList
        component [BusTripListView] as BusList
        component [SeatSelectionView] as SeatSelect
        component [MessageListView] as MsgList
    }

    package "教师功能页面" {
        component [LectureManageView] as LectureMgmt
        component [ApprovalListView] as ApprovalList
        component [SeatLayoutEditorView] as SeatEditor
    }

    package "管理员功能页面" {
        component [AdminUserView] as UserMgmt
        component [AdminConfigView] as ConfigMgmt
        component [AdminReportView] as ReportView
        component [AdminBroadcastView] as BroadcastMgmt
    }

    App --> Login
    App --> Register
    App --> Home
    App --> Dashboard
    App --> ClassList
    App --> ResList
    App --> EquipList
    App --> LectureList
    App --> BusList
    App --> SeatSelect
    App --> MsgList
    App --> LectureMgmt
    App --> ApprovalList
    App --> SeatEditor
    App --> UserMgmt
    App --> ConfigMgmt
    App --> ReportView
    App --> BroadcastMgmt
}

@enduml
