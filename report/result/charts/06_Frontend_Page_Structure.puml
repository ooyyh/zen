@startuml Frontend Structure
!theme plain
skinparam backgroundColor #FFFFFF

title Zen Campus - Frontend Page Structure

package "Shell" {
  [AppShell]
  [HomeView]
  [DashboardView]
  [LoginView]
  [RegisterView]
}

package "Student Pages" {
  [ClassroomListView]
  [ReservationCreateView]
  [ReservationListView]
  [LectureListView]
  [LectureSignupListView]
  [EquipmentListView]
  [EquipmentBorrowListView]
  [BusTripListView]
  [BusBookingListView]
  [StudyRoomListView]
  [SeatSelectionView]
  [SeatReservationListView]
  [MessageListView]
}

package "Admin Pages" {
  [ApprovalListView]
  [AdminReportView]
  [AdminUserView]
  [AdminClassroomView]
  [AdminLectureView]
  [AdminEquipmentView]
  [AdminBusRouteView]
  [AdminBusTripView]
  [AdminStudyRoomView]
  [AdminSeatManagementView]
  [AdminMessageTemplateView]
  [AdminConfigView]
}

package "Services" {
  [router/index.js]
  [services/api.js]
  [services/auth.js]
  [services/websocket.js]
}

AppShell --> "Student Pages"
AppShell --> "Admin Pages"
"Student Pages" --> "Services"
"Admin Pages" --> "Services"

@enduml
