<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hbnu.zen.mapper.MessageTemplateMapper">
    <resultMap id="TemplateMap" type="com.hbnu.zen.mybatis.entity.MessageTemplate">
        <id column="id" property="id" />
        <result column="template_code" property="templateCode" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <select id="selectByCode" resultMap="TemplateMap">
        select * from message_template where template_code = #{templateCode}
    </select>

    <select id="selectById" resultMap="TemplateMap">
        select * from message_template where id = #{id}
    </select>

    <select id="selectAll" resultMap="TemplateMap">
        select * from message_template order by updated_at desc
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into message_template (template_code, title, content)
        values (#{templateCode}, #{title}, #{content})
    </insert>

    <update id="update">
        update message_template
        set title = #{title},
            content = #{content}
        where id = #{id}
    </update>
</mapper>
