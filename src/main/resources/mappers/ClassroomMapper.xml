<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hbnu.zen.mapper.ClassroomMapper">
    <resultMap id="ClassroomMap" type="com.hbnu.zen.mybatis.entity.Classroom">
        <id column="id" property="id" />
        <result column="building" property="building" />
        <result column="room_no" property="roomNo" />
        <result column="capacity" property="capacity" />
        <result column="location" property="location" />
        <result column="equipment_json" property="equipmentJson" />
        <result column="status" property="status" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into classroom (building, room_no, capacity, location, equipment_json, status)
        values (#{building}, #{roomNo}, #{capacity}, #{location}, #{equipmentJson}, #{status})
    </insert>

    <update id="update">
        update classroom
        set building = #{building},
            room_no = #{roomNo},
            capacity = #{capacity},
            location = #{location},
            equipment_json = #{equipmentJson},
            status = #{status}
        where id = #{id}
    </update>

    <select id="selectById" resultMap="ClassroomMap">
        select * from classroom where id = #{id}
    </select>

    <select id="selectAll" resultMap="ClassroomMap">
        select * from classroom
        <where>
            <if test="building != null and building != ''">
                and building = #{building}
            </if>
            <if test="minCapacity != null">
                and capacity &gt;= #{minCapacity}
            </if>
        </where>
        order by building, room_no
    </select>

    <select id="countAll" resultType="int">
        select count(1) from classroom
    </select>
</mapper>
